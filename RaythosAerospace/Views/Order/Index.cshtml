@model IEnumerable<Order>

@{
    ViewData["Title"] = "Order History";
}

@* Code *@
<div class="row">
    <div class="col-md-8 offset-md-2">
        @* <button class="btn btn-success" asp-controller="Inventory" asp-action="Create">Add a new Stock</button> *@
        <table class="table">
            <thead>
                <tr>
                    @* <th>Aircraft</th> *@
                    <th>@Html.DisplayNameFor(model => model.OrderStatus) </th>
                    <th>@Html.DisplayNameFor(model => model.PaymentStatus) </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            @* <td class="align-middle">
                                <img class="rounded-circle" src="@item.Aircraft.ImageURL" alt="@item.Aircraft.ModelName" style="max-width: 150px;" />
                            </td> *@
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.OrderStatus)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.PaymentStatus)
                            </td>
                            <td class="align-middle">
                                <a class="btn btn-outline-primary" asp-asp-controller="Inventory" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square">Update</i></a>
                                @* <a class="btn btn-outline-info"><i class="bi bi-eye">Details</i></a>
                            <a class="btn btn-danger"><i class="bi bi-trash">Delete</i></a> *@
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>