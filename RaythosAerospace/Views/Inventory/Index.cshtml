@model IEnumerable<Inventory>

@{
    ViewData["Title"] = "Inventory";
}

@* Code *@
<div class="row">
    <div class="col-md-8 offset-md-2">
        <button class="btn btn-success" asp-controller="Inventory" asp-action="Create">Add a new Stock</button>
        <table class="table">
            <thead>
                <tr>
                    <th>Aircraft</th>
                    <th>@Html.DisplayNameFor(model => model.RestockDate) </th>
                    <th>@Html.DisplayNameFor(model => model.Quantity) </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @* @Html.DisplayFor(modelItem => item.Aircraft) *@
                            <img class="rounded-circle" src="@item.Aircraft.ImageURL" alt="@item.Aircraft.ModelName" style="max-width: 150px;" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.RestockDate)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-asp-controller="Inventory" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square">Update</i></a>
                            @* <a class="btn btn-outline-info"><i class="bi bi-eye">Details</i></a>
                            <a class="btn btn-danger"><i class="bi bi-trash">Delete</i></a> *@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>